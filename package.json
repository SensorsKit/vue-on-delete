{
  "name": "vue-on-delete",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "newraina <newraina@users.noreply.github.com>",
  "main": "lib/vue-on-delete.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.example.config.js --open --hot",
    "build": "cross-env NODE_ENV=production webpack --config webpack.build.config.js --progress --hide-modules",
    "publish": "npm run build",
    "test": "jest",
    "commit": "git-cz",
    "precommit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "setupFiles": [
      "./tool/mock.js"
    ]
  },
  "lint-staged": {
    "./**/*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "jsxBracketSameLine": true
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.12",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.1.0",
    "file-loader": "^1.1.4",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "vue": "^2.5.11",
    "vue-jest": "^2.1.1",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  }
}
